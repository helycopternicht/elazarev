<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="consoleEventLogger" class="com.elazarev.spring.ConsoleEventLogger"/>

    <!--<bean id="eventLogger" class="com.elazarev.spring.FileEventLogger" init-method="init">-->
    <!--<constructor-arg value="log.txt"/>-->
    <!--</bean>-->

    <bean id="fileEventLogger" class="com.elazarev.spring.CacheFileEventLogger" init-method="init" destroy-method="destroy" lazy-init="true">
        <constructor-arg index="0" value="log.txt" />
        <constructor-arg index="1" value="10"/>
    </bean>

    <bean id="combinedEventLogger" class="com.elazarev.spring.CombinedEventLogger">
        <constructor-arg>
            <list>
                <ref bean="consoleEventLogger"/>
                <ref bean="fileEventLogger"/>
            </list>
        </constructor-arg>
    </bean>

    <bean id="event" class="com.elazarev.spring.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>

        <constructor-arg>
            <bean class="java.text.DateFormat" factory-method="getDateTimeInstance"/>
        </constructor-arg>

        <property name="msg" value="Some event for 1" />
        <property name="type" value="ERROR"/>
    </bean>

</beans>